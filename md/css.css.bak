html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  font-family: 'Helvetica Neue', Arial, sans-serif;
  color: #333;
}
#editor {
  height: 100%;
}

textarea, #editor div {
  float: left;
  width: 49%;
  height: 100%;
  margin:0;
  padding: 0;
  vertical-align: top;
  // box-sizing: border-box;
  display: block;
  background-color: #fdd;
}

textarea {
  border: none;
  border-right: 1px solid #ccc;
  resize: none;
  outline: none;
  background-color: #f6f6f6;
  font-size: 14px;
  font-family: 'Monaco', courier, monospace;
}

code {
  color: #f66;
}